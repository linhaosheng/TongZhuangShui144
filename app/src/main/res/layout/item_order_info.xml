<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:background="@drawable/set_bg_btn15">

    <ImageView
        android:id="@+id/order_state_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/have_finish"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:layout_marginRight="@dimen/dp_90"/>

    <TextView
        android:id="@+id/order_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单编号：3283718237"
        android:textColor="#000000"
        android:textSize="12sp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"/>

    <TextView
        android:id="@+id/shop_order"
        android:layout_width="@dimen/dp_55"
        android:layout_height="@dimen/dp_20"
        android:text="商城订单"
        android:layout_alignParentRight="true"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/set_bg_btn12"/>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F2F2F2"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/order_num"/>

    <TextView
        android:id="@+id/time_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今天 15:00-17:00 送达"
        android:layout_below="@+id/line"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="#333333"
        android:layout_marginLeft="@dimen/dp_20"
        android:textSize="14sp"/>

     <ImageView
         android:id="@+id/time_out_icon"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@mipmap/time_out"
         android:layout_alignParentRight="true"
         android:layout_below="@+id/line"
         android:layout_marginTop="@dimen/dp_12"
         android:layout_marginRight="@dimen/dp_55"/>

    <TextView
        android:id="@+id/timeout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="即将超时"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/line"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="#E02020"
        android:layout_marginRight="@dimen/dp_10"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/name_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="张三 18982918291"
        android:layout_below="@+id/time_send"
        android:layout_marginTop="@dimen/dp_15"
        android:textColor="#333333"
        android:layout_marginLeft="@dimen/dp_20"
        android:textSize="14sp"/>

    <ImageView
        android:id="@+id/call_phone"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:src="@mipmap/call"
        android:scaleType="center"
        android:layout_toRightOf="@+id/name_info"
        android:layout_below="@+id/time_send"
        android:layout_marginRight="@dimen/dp_50"/>

    <TextView
        android:id="@+id/dealer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="经销商"
        android:background="@drawable/set_bg_btn20"
        android:layout_alignParentRight="true"
        android:padding="@dimen/dp_2"
        android:layout_below="@+id/time_send"
        android:layout_marginTop="@dimen/dp_15"
        android:textColor="#1677FF"
        android:layout_marginRight="@dimen/dp_10"
        android:textSize="11sp"/>

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="北京市海淀区知春路6号"
        android:layout_below="@+id/name_info"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_120"
        android:textColor="#333333"
        android:layout_marginLeft="@dimen/dp_20"
        android:textSize="14sp"/>


    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="距离1.5km"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/name_info"
        android:layout_marginTop="@dimen/dp_15"
        android:textColor="#B7B7B7"
        android:layout_marginRight="@dimen/dp_10"
        android:textSize="11sp"/>

    <TextView
        android:id="@+id/order_detail_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:text="共2种商品，合计4件 ｜ 农夫山泉桶装水 1.8 ↓"
        android:textSize="12sp"
        android:textAlignment="center"
        android:layout_below="@+id/address"
        android:layout_marginTop="@dimen/dp_12"
        android:textColor="#3F3F3F"
        android:background="@drawable/set_bg_btn49"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="10dp"/>

    <TextView
        android:id="@+id/take_orders"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_35"
        android:textColor="#FFFFFF"
        android:text="抢单/接单"
        android:background="@drawable/set_bg_btn14"
        android:layout_below="@+id/order_detail_info"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        android:layout_marginBottom="@dimen/dp_10"/>
</RelativeLayout>