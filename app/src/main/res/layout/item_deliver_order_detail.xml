                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/shop_num_tong2"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/set_bg_btn26"
                    android:gravity="center"
                    android:text="0"
                    android:numeric="integer"
                    android:textColor="#32C5FF"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/shop_add_tong2"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/set_bg_btn26"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/recycle_type_view3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_15">

            <TextView
                android:id="@+id/recycle_type3"
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="直饮桶"
                android:textColor="#3F3F3F"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_35"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_toRightOf="@+id/recycle_type3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/reduce_tong3"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/set_bg_btn26"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/shop_num_tong3"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/set_bg_btn26"
                    android:gravity="center"
                    android:text="0"
                    android:numeric="integer"
                    android:textColor="#32C5FF"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/shop_add_tong3"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/set_bg_btn26"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/recycle_type_view4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_15">

            <TextView
                android:id="@+id/recycle_type4"
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="直饮桶"
                android:textColor="#3F3F3F"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_35"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_toRightOf="@+id/recycle_type4"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/reduce_tong4"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/set_bg_btn26"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/shop_num_tong4"
                    android:layout_width="@dimen/dp_60"
