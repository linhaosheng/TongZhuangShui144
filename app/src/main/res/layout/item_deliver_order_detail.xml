<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:background="@drawable/set_bg_btn13">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="@dimen/dp_17"
        android:text="农夫山泉桶装水 1.8L"
        android:textColor="#3F3F3F"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/recycle_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="@dimen/dp_15"
        android:text="农夫山泉1.8L"
        android:textColor="#3F3F3F"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/total_price_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_10"
        android:text="¥30x10"
        android:textColor="#3F3F3F"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_10"
        android:text="¥300"
        android:textColor="#3F3F3F"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/recycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recycle_name"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="12dp"
        android:background="@drawable/set_bg_btn34"
        android:text="回收"
        android:textColor="#FF9419"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/recycle_material_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recycle_name"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_toRightOf="@+id/recycle"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/recycle_type_view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recycle_type"
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="直饮桶"
                android:textColor="#3F3F3F"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_35"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_toRightOf="@+id/recycle_type"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/reduce_tong"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/set_bg_btn26"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/shop_num_tong"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/set_bg_btn26"
                    android:gravity="center"
                    android:text="0"
                    android:numeric="integer"
                    android:textColor="#32C5FF"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/shop_add_tong"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/set_bg_btn26"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/recycle_type_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_15">

            <TextView
                android:id="@+id/recycle_type2"
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
