<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:background="@drawable/set_bg_btn13"
    android:paddingBottom="@dimen/dp_10">

    <TextView
        android:id="@+id/order_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单编号：3283718237"
        android:textSize="12sp"
        android:textColor="#000000"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"/>

    <TextView
        android:id="@+id/order_state"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_25"
        android:text="作废"
        android:textAlignment="center"
        android:textColor="#32C5FF"
        android:gravity="center"
        android:paddingTop="@dimen/dp_5"
        android:textSize="11sp"
        android:paddingBottom="@dimen/dp_5"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/set_bg_btn11"/>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F2F2F2"
        android:layout_below="@+id/order_num"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_below="@+id/line"
        android:layout_marginTop="@dimen/dp_10">

        <LinearLayout
            android:id="@+id/client_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/clinet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户姓名：张三"
                android:textSize="14sp"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/client_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="经销商"
                android:textSize="12sp"
                android:textColor="#1677FF"
                android:layout_marginLeft="@dimen/dp_20"/>
        </LinearLayout>

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系电话：18709231876"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="@dimen/dp_10"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10">

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地      址：麓谷大道店"
                android:textSize="14sp"
                android:textColor="#333333"
                />

            <TextView
                android:id="@+id/address_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="湖南省长沙市岳麓区麓谷大道1928号"
                android:textSize="12sp"
                android:textColor="#333333"
                android:layout_below="@+id/address"
                android:layout_marginLeft="@dimen/dp_70"
                android:layout_marginTop="@dimen/dp_10"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/pay_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付方式：微信支付"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="@dimen/dp_10"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品总额：123.00"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="@dimen/dp_10"
            />

        <TextView
            android:id="@+id/need_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应收金额：123.00"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="@dimen/dp_10"
            />

        <TextView
            android:id="@+id/actual_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实收金额：123.00"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="@dimen/dp_10"
            />

        <TextView
            android:id="@+id/sale_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="销售距离: 120m"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="@dimen/dp_10"
            />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="录入时间：2020/12/12 12:00:00"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="@dimen/dp_10"
            />


    </LinearLayout>



</RelativeLayout>