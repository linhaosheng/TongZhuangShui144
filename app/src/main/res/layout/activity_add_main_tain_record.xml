<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <include layout="@layout/header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_17">

        <TextView
            android:id="@+id/client_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客户名称：YY超市"
            android:textColor="#3F3F3F"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/client_attr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专卖"
            android:textColor="#1DC11D"
            android:layout_marginLeft="@dimen/dp_25"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_3"
            android:paddingBottom="@dimen/dp_3"
            android:textSize="11sp"
            android:background="@drawable/set_bg_btn17"/>

    </LinearLayout>

    <TextView
        android:id="@+id/client_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_17"
        android:text="客户类型：经销商"
        android:textColor="#3F3F3F"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/client_persion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_17"
        android:text="联系人：米老鼠"
        android:textColor="#3F3F3F"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/client_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_17"
        android:text="联系电话：13743432424"
        android:textColor="#3F3F3F"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/main_tain_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_17"
        android:text="维护时间：2020-11-12 14:00:00"
        android:textColor="#3F3F3F"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_17"
        android:text="距客户：500米"
        android:textColor="#3F3F3F"
        android:textSize="12sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_17"
        android:text="备注"
        android:textColor="#3F3F3F"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:hint="请输入文字"
        android:gravity="top"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:textSize="14sp"
        android:background="@drawable/set_bg_btn16"/>

    <Button
        android:id="@+id/input_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@drawable/set_bg_btn14"
        android:textColor="#fff"
        android:text="提交"
        android:textSize="16sp"/>

</LinearLayout>