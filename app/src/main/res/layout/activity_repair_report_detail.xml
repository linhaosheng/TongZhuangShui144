<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F8FAFC"
    android:orientation="vertical">

    <include layout="@layout/header" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/set_bg_btn7"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:elevation="@dimen/dp_8">

                <TextView
                    android:id="@+id/repair_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报修单号：1231212323"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_12"
                    android:textColor="#000000"/>


                <TextView
                    android:id="@+id/repair_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报修人员：米老鼠"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#999999"
                    android:layout_below="@+id/repair_num"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_10"/>


                <TextView
                    android:id="@+id/repair_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="申报人手机：18912321232"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#999999"
                    android:layout_below="@+id/repair_num"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"/>

                <TextView
                    android:id="@+id/repair_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="申报时间：2020-12-12"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#999999"
                    android:layout_below="@+id/repair_name"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"/>

                <TextView
                    android:id="@+id/malfunction_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_below="@+id/repair_time"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#000000"
                    android:text="故障描述：今天2020年10月12日发现故障，已经打电话进行报修等待处理中。"
                    android:layout_marginBottom="@dimen/dp_20"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/review_info_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/set_bg_btn7"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:elevation="@dimen/dp_8"
                android:layout_below="@+id/view1"
                android:visibility="gone">

                <TextView
                    android:id="@+id/view4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="审核人员"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/review_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/view4"
                    android:layout_marginTop="@dimen/dp_15"
                    android:textSize="@dimen/sp_14"
                    android:text="米老鼠"
                    android:textColor="#000000"
                    android:layout_marginLeft="@dimen/dp_10"/>

                <TextView
                    android:id="@+id/view5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="审核时间"
                    android:textStyle="bold"
                    android:layout_below="@+id/view4"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="#000000"
                    android:layout_marginBottom="@dimen/dp_15"/>

                <TextView
                    android:id="@+id/review_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/view5"
                    android:textColor="#000000"
                    android:layout_below="@+id/review_name"
                    android:text="2020-10-12 12:00:00"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/set_bg_btn7"
                android:layout_below="@+id/review_info_view"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:elevation="@dimen/dp_8"
                android:visibility="visible">

                <TextView
                    android:id="@+id/device"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备详情"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    android:layout_margin="@dimen/dp_12"/>

                <View
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#1a000000"
                    android:layout_below="@+id/device"/>

                <ImageView
                    android:id="@+id/device_img"
                    android:layout_width="136dp"
                    android:layout_height="@dimen/dp_96"
                    android:src="@mipmap/tv_bg"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_below="@id/line1"/>

                <TextView
                    android:id="@+id/device_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="长虹55英寸智能电视"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    android:layout_toRightOf="@+id/device_img"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_below="@id/line1"/>


                <TextView
                    android:id="@+id/device_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备编号：13383888\n使用部门：运营部\n部署位置：一楼西侧展厅"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:lineSpacingExtra="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_toRightOf="@+id/device_img"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_below="@id/device_name"/>


                <TextView
                    android:id="@+id/device_status_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:layout_below="@+id/device_img"
                    android:text="设备状态 "
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_12"/>

                <TextView
                    android:id="@+id/device_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:layout_below="@+id/device_img"
                    android:text=""
                    android:layout_toRightOf="@+id/device_status_view"
                    android:textColor="#000000"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_12"/>


                <TextView
                    android:id="@+id/device_grade_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:layout_below="@+id/device_img"
                    android:text="故障等级 "
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dp_20"
                    android:textColor="#000000"
                    android:layout_marginLeft="@dimen/dp_200"
                    />

                <TextView
                    android:id="@+id/device_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:layout_below="@+id/device_img"
                    android:text=""
                    android:layout_marginTop="@dimen/dp_20"
                    android:textColor="#000000"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_toRightOf="@+id/device_grade_view"/>


                <TextView
                    android:id="@+id/device_grade_type_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:layout_below="@+id/device_status"
                    android:text="故障类型 "
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dp_20"
                    android:textColor="#000000"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_20" />

                <TextView
                    android:id="@+id/device_grade_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:layout_below="@+id/device_status"
                    android:text=""
                    android:layout_marginTop="@dimen/dp_20"
                    android:textColor="#000000"
                    android:layout_toRightOf="@+id/device_grade_type_view"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_20"
                    />

                <TextView
                    android:id="@+id/repair_persion_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:layout_below="@+id/device_grade_view"
                    android:text="维修人员"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dp_20"
                    android:textColor="#000000"
                    android:layout_marginLeft="@dimen/dp_200"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/repair_persion_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:layout_below="@+id/device_grade"
                    android:text="唐老鸭"
                    android:layout_marginTop="@dimen/dp_20"
                    android:textColor="#000000"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:visibility="gone"
                    android:layout_toRightOf="@+id/repair_persion_view"/>


                <RelativeLayout
                    android:id="@+id/repair_time_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_below="@+id/device_grade_type"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/start_repair_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开始维修时间"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="@dimen/sp_14"/>

                    <TextView
                        android:id="@+id/start_repair_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2020-10-12 12:00:00"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_toRightOf="@+id/start_repair_view"
                        android:textSize="@dimen/sp_14"
                        android:textColor="#000000"/>

                    <TextView
                        android:id="@+id/end_repair_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="维修完成时间"
                        android:layout_below="@+id/start_repair_view"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/dp_18"
                        android:textSize="@dimen/sp_14"/>

                    <TextView
                        android:id="@+id/end_repair_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2020-10-12 12:00:00"
                        android:textSize="@dimen/sp_14"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_below="@+id/start_repair_time"
                        android:layout_toRightOf="@+id/end_repair_view"
                        android:textColor="#000000"
                        android:layout_marginTop="@dimen/dp_18"/>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/repair_method"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@+id/repair_time_view"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        android:text="维修手段"/>

                    <EditText
                        android:id="@+id/repair_method_edit"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_130"
                        android:layout_below="@+id/grade_btn_view"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@drawable/set_bg_btn6"
                        android:gravity="start"
                        android:hint="请输入文字"
                        android:paddingLeft="@dimen/dp_12"
                        android:paddingTop="@dimen/dp_10"
                        android:textColor="#ACACAC"
                        android:textSize="@dimen/sp_16"
                        android:layout_marginBottom="@dimen/dp_15"/>

                    <TextView
                        android:id="@+id/repair_method_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="@dimen/sp_14"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_20"
                        />

                    <LinearLayout
                        android:id="@+id/test_finish_time_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_10"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="测试完成时间"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:textSize="@dimen/sp_14"/>

                        <TextView
                            android:id="@+id/test_finish_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textSize="@dimen/sp_14"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:text="2020-10-12 12:00:00"
                            />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/review_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/set_bg_btn7"
                android:layout_below="@+id/view2"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:elevation="@dimen/dp_8">

                <TextView
                    android:id="@+id/review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="审核"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    android:layout_margin="@dimen/dp_12"/>

                <View
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#1a000000"
                    android:layout_below="@+id/review"/>

                <LinearLayout
                    android:id="@+id/grade_btn_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_48"
                    android:layout_marginRight="@dimen/dp_48"
                    android:layout_below="@+id/line2"
                    android:layout_marginTop="@dimen/sp_18">

                    <Button
                        android:id="@+id/agree_btn"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:text="同意"
                        android:textColor="@color/white"
                        android:background="@drawable/set_bg_btn8"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:layout_weight="1"/>

                    <Button
                        android:id="@+id/disagree_btn"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:text="不同意"
                        android:textColor="#3F3F3F"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:background="@drawable/set_bg_btn9"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:layout_weight="1"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/grade_edit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_130"
                    android:layout_below="@+id/grade_btn_view"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/set_bg_btn6"
                    android:gravity="start"
                    android:hint="不同意时必须填写理由"
                    android:paddingLeft="@dimen/dp_12"
                    android:paddingTop="@dimen/dp_10"
                    android:textColor="#ACACAC"
                    android:textSize="@dimen/sp_16" />

                <RelativeLayout
                    android:id="@+id/guaranee_person"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/grade_edit"
                    android:paddingTop="@dimen/dp_12"
                    android:paddingBottom="@dimen/dp_12">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="维修人员"
                        android:layout_marginLeft="@dimen/dp_22"
                        android:textSize="@dimen/sp_17"
                        android:layout_centerVertical="true"
                        android:textColor="#000000"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/next"/>

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/review_view"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/dp_15">

                <Button
                    android:id="@+id/input_btn"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:textSize="@dimen/sp_18"
                    android:background="#34B6FA"
                    android:text="提交"
                    android:layout_alignParentBottom="true"
                    android:textColor="#FFFFFF"/>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>