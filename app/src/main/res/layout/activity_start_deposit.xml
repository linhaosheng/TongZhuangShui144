<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F8F8F8">


    <include layout="@layout/header"/>

    <RelativeLayout
        android:id="@+id/client_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="12dp"
        android:background="#fff">

        <TextView
            android:id="@+id/name"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:text="张三"
            android:textColor="#3F3F3F"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/name"
            android:text="18909293021"
            android:textColor="#999999"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/address"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginTop="@dimen/dp_8"
            android:text="麓谷大道店"
            android:textColor="#3F3F3F"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/address_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_toRightOf="@+id/name"
            android:text="湖南省长沙市岳麓区麓谷大道1928号"
            android:textColor="#999999"
            android:textSize="14sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#fff">

    <pro.haichuang.tzs144.view.LSettingItem
        android:id="@+id/deposit_num"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:LtextColor="#000000"
        app:leftText="押金编号"
        app:leftTextMarginLeft="@dimen/dp_10"
        app:rightStyle="iconHide"
        app:isShowRightText = "true"
        app:rightText="请选择 >"
        app:isShowUnderLine="true"
        app:rightIconSize="@dimen/dp_22" />


    <pro.haichuang.tzs144.view.LSettingItem
        android:id="@+id/deposit_goods"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:LtextColor="#000000"
        app:leftText="押金物品"
        app:leftTextMarginLeft="@dimen/dp_10"
        app:rightStyle="iconHide"
        app:isShowRightText = "true"
        app:rightText="请选择 >"
        app:isShowUnderLine="true"
        app:rightIconSize="@dimen/dp_22" />


    <pro.haichuang.tzs144.view.LSettingItem
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:LtextColor="#000000"
        app:leftText="单价"
        app:leftTextMarginLeft="@dimen/dp_10"
        app:rightStyle="iconHide"
        app:isShowRightText = "true"
        app:rightText="请选择 >"
        app:isShowUnderLine="true"
        app:rightIconSize="@dimen/dp_22" />

    <pro.haichuang.tzs144.view.LSettingItem
        android:id="@+id/num"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:LtextColor="#000000"
        app:leftText="数量"
        app:leftTextMarginLeft="@dimen/dp_10"
        app:rightStyle="iconHide"
        app:isShowRightText = "true"
        app:rightText="请选择 >"
        app:isShowUnderLine="true"
        app:rightIconSize="@dimen/dp_22" />

    <pro.haichuang.tzs144.view.LSettingItem
        android:id="@+id/money"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:LtextColor="#000000"
        app:leftText="金额"
        app:leftTextMarginLeft="@dimen/dp_10"
        app:rightStyle="iconHide"
        app:isShowRightText = "true"
        app:rightText="请选择 >"
        app:isShowUnderLine="true"
        app:rightIconSize="@dimen/dp_22" />

    <pro.haichuang.tzs144.view.LSettingItem
        android:id="@+id/deposit_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:LtextColor="#000000"
        app:leftText="开押类型"
        app:leftTextMarginLeft="@dimen/dp_10"
        app:rightStyle="iconHide"
        app:isShowRightText = "true"
        app:rightText="请选择 >"
        app:isShowUnderLine="true"
        app:rightIconSize="@dimen/dp_22" />
    </LinearLayout>

</LinearLayout>