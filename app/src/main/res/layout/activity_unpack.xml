<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/header"/>

    <pro.haichuang.tzs144.view.LSettingItem
        android:id="@+id/inventory_subject"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_30"
        app:LtextColor="#000000"
        app:isShowRightText="true"
        app:isShowUnderLine="true"
        app:leftText="库存主体"
        app:leftTextMarginLeft="@dimen/dp_10"
        app:rightIconSize="@dimen/dp_22"
        app:rightStyle="iconHide"
        app:rightText="请选择 >" />

    <pro.haichuang.tzs144.view.LSettingItem
        android:id="@+id/shop_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:LtextColor="#000000"
        app:isShowRightText="true"
        app:isShowUnderLine="true"
        app:leftText="商品"
        app:leftTextMarginLeft="@dimen/dp_10"
        app:rightIconSize="@dimen/dp_22"
        app:rightStyle="iconHide"
        app:rightText="请选择 >" />

    <pro.haichuang.tzs144.view.LSettingItem
        android:id="@+id/shop_num"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:LtextColor="#000000"
        app:isShowRightText="false"
        app:isShowUnderLine="true"
        app:leftText="商品数量"
        app:leftTextMarginLeft="@dimen/dp_10"
        app:rightIconSize="@dimen/dp_22"
        app:rightStyle="iconHide"
        app:showEditInput="true"
        />

    <pro.haichuang.tzs144.view.LSettingItem
        android:id="@+id/unpack_shop_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:LtextColor="#000000"
        app:isShowRightText="true"
        app:isShowUnderLine="true"
        app:leftText="拆解后商品"
        app:leftTextMarginLeft="@dimen/dp_10"
        app:rightIconSize="@dimen/dp_22"
        app:rightStyle="iconHide"
        app:rightText="请选择 >" />

    <pro.haichuang.tzs144.view.LSettingItem
        android:id="@+id/unpack_shop_num"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:LtextColor="#000000"
        app:isShowRightText="false"
        app:isShowUnderLine="true"
        app:leftText="拆解后商品数量"
        app:leftTextMarginLeft="@dimen/dp_10"
        app:rightIconSize="@dimen/dp_22"
        app:rightStyle="iconHide"
        app:showEditInput="true"
        />


    <Button
        android:id="@+id/save_deposit_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginBottom="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_60"
        android:background="@drawable/set_bg_btn14"
        android:text="确定"
        android:textColor="#ffffff"
        android:textSize="16sp" />

</LinearLayout>