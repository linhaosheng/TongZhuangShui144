<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <pro.haichuang.tzs144.view.LSettingItem
            android:id="@+id/start_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            app:LtextColor="#000000"
            app:isShowRightText="true"
            app:isShowUnderLine="true"
            app:leftText="开始时间"
            app:leftTextMarginLeft="@dimen/dp_10"
            app:rightIconSize="@dimen/dp_22"
            app:rightStyle="iconHide"
            app:rightText="请选择 >" />

        <pro.haichuang.tzs144.view.LSettingItem
            android:id="@+id/end_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            app:LtextColor="#000000"
            app:isShowRightText="true"
            app:isShowUnderLine="true"
            app:leftText="结束时间"
            app:leftTextMarginLeft="@dimen/dp_10"
            app:rightIconSize="@dimen/dp_22"
            app:rightStyle="iconHide"
            app:rightText="请选择 >" />

        <pro.haichuang.tzs144.view.LSettingItem
            android:id="@+id/shop_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            app:LtextColor="#000000"
            app:isShowRightText="true"
            app:isShowUnderLine="true"
            app:leftText="商品品类"
            app:leftTextMarginLeft="@dimen/dp_10"
            app:rightIconSize="@dimen/dp_22"
            app:rightStyle="iconHide"
            app:rightText="请选择 >" />


        <pro.haichuang.tzs144.view.LSettingItem
            android:id="@+id/shop_id"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            app:LtextColor="#000000"
            app:isShowRightText="true"
            app:isShowUnderLine="true"
            app:leftText="商品"
            app:leftTextMarginLeft="@dimen/dp_10"
            app:rightIconSize="@dimen/dp_22"
            app:rightStyle="iconHide"
            app:rightText="请选择 >" />


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="15dp"/>

</LinearLayout>