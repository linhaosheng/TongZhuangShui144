<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#fff"
    android:paddingBottom="@dimen/dp_12">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_30"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出库日期"
            android:textColor="#3F3F3F"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/start_time"
            android:layout_width="113dp"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/set_bg_btn36"
            android:gravity="center"
            android:text="2019-10-22"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="#32C5FF"
            android:textSize="14sp" />


        <View
            android:layout_width="@dimen/dp_35"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="#979797" />


        <TextView
            android:id="@+id/end_time"
            android:layout_width="113dp"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/set_bg_btn37"
            android:gravity="center"
            android:text="2019-06-22"
            android:textColor="#6D7278"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出库人"
            android:textSize="14sp"
            android:textColor="#3F3F3F"
            android:layout_marginTop="@dimen/dp_20"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/inventory_subject"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="@dimen/dp_23"
                android:layout_marginRight="@dimen/dp_22"
                android:background="@drawable/set_bg_btn11"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/down3"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:layout_marginRight="@dimen/dp_40"/>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>