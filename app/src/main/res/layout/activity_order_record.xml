<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">

    <include layout="@layout/header" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="113dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dp_10">

                    <TextView
                        android:id="@+id/start_time"
                        android:layout_width="113dp"
                        android:layout_height="@dimen/dp_40"
                        android:background="@drawable/set_bg_btn16"
                        android:gravity="center"
                        android:text="2019-06-22"
                        android:textColor="#32C5FF"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        android:text="总订单数"
                        android:textColor="#3F3F3F"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/order_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        android:text="500"
                        android:textColor="#333333"
                        android:textSize="30sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        android:text="比昨日"
                        android:textColor="#3F3F3F"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/last_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        android:text="↓39%"
                        android:textColor="#E02020"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        android:text="比上周同期"
                        android:textColor="#3F3F3F"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/last_week"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        android:text="↑50%%"
                        android:textColor="#3C9C25"
                        android:textSize="14sp" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/dp_35"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="#979797" />

                <LinearLayout
                    android:layout_width="113dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dp_10">

                    <TextView
                        android:id="@+id/end_time"
                        android:layout_width="113dp"
                        android:layout_height="@dimen/dp_40"
                        android:background="@drawable/set_bg_btn16"
                        android:gravity="center"
                        android:text="2019-06-22"
                        android:textColor="#6D7278"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        android:text="总商品数"
                        android:textColor="#3F3F3F"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/shop_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        android:text="300"
                        android:textColor="#333333"
                        android:textSize="30sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        android:text="比昨日"
                        android:textColor="#3F3F3F"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/shop_last_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        android:text="↓39%"
                        android:textColor="#E02020"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        android:text="比上周同期"
                        android:textColor="#3F3F3F"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/shop_last_week"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        android:text="↑50%%"
                        android:textColor="#3C9C25"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F8F8F8"
                android:paddingBottom="@dimen/dp_30"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>