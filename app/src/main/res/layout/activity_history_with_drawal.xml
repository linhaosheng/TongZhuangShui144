<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <include layout="@layout/header" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/client_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="12dp">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:text="张三"
                    android:textColor="#3F3F3F"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/name"
                    android:text="18909293021"
                    android:textColor="#999999"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/address"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="麓谷大道店"
                    android:textColor="#3F3F3F"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/address_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/phone"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_toRightOf="@+id/name"
                    android:text="湖南省长沙市岳麓区麓谷大道1928号"
                    android:textColor="#999999"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@mipmap/next2"
                    android:layout_marginRight="@dimen/dp_10"
                    android:textSize="14sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical">


                <pro.haichuang.tzs144.view.LSettingItem
                    android:id="@+id/guarantee_persion_phone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    app:LtextColor="#000000"
                    app:isShowRightText="false"
                    app:leftText="押金编号"
                    app:leftTextMarginLeft="@dimen/dp_10"
                    app:rightIconSize="@dimen/dp_22"
                    app:rightStyle="iconHide"
                    app:rightText="请输入"
                    app:showEditInput="true" />


                <pro.haichuang.tzs144.view.LSettingItem
                    android:id="@+id/deposit_number"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    app:LtextColor="#000000"
                    app:isShowRightText="false"
                    app:leftText="押金本编号"
                    app:leftTextMarginLeft="@dimen/dp_10"
                    app:rightIconSize="@dimen/dp_22"
                    app:rightStyle="iconHide"
                    app:rightText="请输入"
                    app:showEditInput="true" />


                <pro.haichuang.tzs144.view.LSettingItem
                    android:id="@+id/client_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    app:LtextColor="#000000"
                    app:isShowRightText="false"
                    app:leftText="客户名称"
                    app:leftTextMarginLeft="@dimen/dp_10"
                    app:rightIconSize="@dimen/dp_22"
                    app:rightStyle="iconHide"
                    app:rightText="请输入"
                    app:showEditInput="true" />

                <pro.haichuang.tzs144.view.LSettingItem
                    android:id="@+id/mortgage_goods"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    app:LtextColor="#000000"
                    app:isShowRightText="true"
                    app:leftText="开押物品"
                    app:leftTextMarginLeft="@dimen/dp_10"
                    app:rightIconSize="@dimen/dp_22"
                    app:rightStyle="iconHide"
                    app:rightText="请选择"
                    app:showEditInput="false" />

                <pro.haichuang.tzs144.view.LSettingItem
                    android:id="@+id/mortgage_price"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    app:LtextColor="#000000"
                    app:isShowRightText="false"
                    app:leftText="开押单价"
                    app:leftTextMarginLeft="@dimen/dp_10"
                    app:rightIconSize="@dimen/dp_22"
                    app:rightStyle="iconHide"
                    app:rightText="请输入"
                    app:showEditInput="true" />

                <pro.haichuang.tzs144.view.LSettingItem
                    android:id="@+id/mortgage_num"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    app:LtextColor="#000000"
                    app:isShowRightText="false"
                    app:leftText="数量"
                    app:leftTextMarginLeft="@dimen/dp_10"
                    app:rightIconSize="@dimen/dp_22"
                    app:rightStyle="iconHide"
                    app:rightText="请输入"
                    app:showEditInput="true" />


                <pro.haichuang.tzs144.view.LSettingItem
                    android:id="@+id/mortgage_type"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    app:LtextColor="#000000"
                    app:isShowRightText="true"
                    app:leftText="开押类型"
                    app:leftTextMarginLeft="@dimen/dp_10"
                    app:rightIconSize="@dimen/dp_22"
                    app:rightStyle="iconHide"
                    app:rightText="请选择" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="退押金:"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/deposit_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@null"
                        android:text="   ¥"
                        android:textSize="@dimen/sp_14"
                        android:layout_gravity="center_vertical"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_35"
                        android:layout_marginLeft="@dimen/dp_14"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/set_bg_btn39"
                        android:text="自动计算"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/with_drawal_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="@dimen/dp_44"
                android:layout_marginRight="48dp"
                android:layout_marginBottom="@dimen/dp_60"
                android:background="@drawable/set_bg_btn14"
                android:text="退款"
                android:textColor="#ffffff"
                android:textSize="16sp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>