<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:orientation="vertical">

    <include layout="@layout/header" />


    <RelativeLayout
        android:id="@+id/client_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="12dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:text="张三"
            android:textColor="#3F3F3F"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/name"
            android:text="18909293021"
            android:textColor="#999999"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/address"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginTop="@dimen/dp_8"
            android:text="麓谷大道店"
            android:textColor="#3F3F3F"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/address_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_toRightOf="@+id/name"
            android:text="湖南省长沙市岳麓区麓谷大道1928号"
            android:textColor="#999999"
            android:textSize="14sp" />

    </RelativeLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_marginTop="@dimen/dp_10">


       <pro.haichuang.tzs144.view.LSettingItem
           android:id="@+id/guarantee_persion_phone"
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_50"
           app:LtextColor="#000000"
           app:leftText="押金编号"
           app:leftTextMarginLeft="@dimen/dp_10"
           app:rightStyle="iconHide"
           app:isShowRightText = "false"
           app:rightText="请输入"
           app:showEditInput="true"
           app:rightIconSize="@dimen/dp_22" />


       <pro.haichuang.tzs144.view.LSettingItem
           android:id="@+id/deposit_number"
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_50"
           app:LtextColor="#000000"
           app:leftText="押金本编号"
           app:leftTextMarginLeft="@dimen/dp_10"
           app:rightStyle="iconHide"
           app:isShowRightText = "false"
           app:rightText="请输入"
           app:showEditInput="true"
           app:rightIconSize="@dimen/dp_22" />


       <pro.haichuang.tzs144.view.LSettingItem
           android:id="@+id/client_name"
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_50"
           app:LtextColor="#000000"
           app:leftText="客户名称"
           app:leftTextMarginLeft="@dimen/dp_10"
           app:rightStyle="iconHide"
           app:isShowRightText = "false"
           app:rightText="请输入"
           app:showEditInput="true"
           app:rightIconSize="@dimen/dp_22" />

       <pro.haichuang.tzs144.view.LSettingItem
           android:id="@+id/mortgage_goods"
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_50"
           app:LtextColor="#000000"
           app:leftText="开押物品"
           app:leftTextMarginLeft="@dimen/dp_10"
           app:rightStyle="iconHide"
           app:isShowRightText = "true"
           app:rightText="请选择"
           app:showEditInput="false"
           app:rightIconSize="@dimen/dp_22" />

       <pro.haichuang.tzs144.view.LSettingItem
           android:id="@+id/mortgage_price"
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_50"
           app:LtextColor="#000000"
           app:leftText="开押单价"
           app:leftTextMarginLeft="@dimen/dp_10"
           app:rightStyle="iconHide"
           app:isShowRightText = "false"
           app:rightText="请输入"
           app:showEditInput="true"
           app:rightIconSize="@dimen/dp_22" />

       <pro.haichuang.tzs144.view.LSettingItem
           android:id="@+id/mortgage_num"
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_50"
           app:LtextColor="#000000"
           app:leftText="数量"
           app:leftTextMarginLeft="@dimen/dp_10"
           app:rightStyle="iconHide"
           app:isShowRightText = "false"
           app:rightText="请输入"
           app:showEditInput="true"
           app:rightIconSize="@dimen/dp_22" />


       <pro.haichuang.tzs144.view.LSettingItem
           android:id="@+id/mortgage_type"
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_50"
           app:LtextColor="#000000"
           app:leftText="开押类型"
           app:leftTextMarginLeft="@dimen/dp_10"
           app:rightStyle="iconHide"
           app:isShowRightText = "true"
           app:rightText="请选择"
           app:rightIconSize="@dimen/dp_22" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginLeft="@dimen/dp_24">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="退押金:"
               android:textColor="#333333"
               android:textSize="14sp"
               android:layout_marginTop="25dp"
               android:layout_marginBottom="@dimen/dp_24"/>

           <EditText
               android:id="@+id/deposit_money"
               android:layout_width="@dimen/dp_100"
               android:layout_height="wrap_content"
               android:layout_marginTop="30dp"
               android:layout_marginLeft="@dimen/dp_10"/>
           
           <Button
               android:layout_width="@dimen/dp_100"
               android:layout_height="@dimen/dp_35"
               android:background="@drawable/set_bg_btn19"
               android:layout_marginLeft="@dimen/dp_14"
               android:text="自动计算"
               android:textColor="#333333"
               android:textSize="14sp"
               android:layout_marginTop="@dimen/dp_18"/>

       </LinearLayout>

   </LinearLayout>

    <Button
        android:id="@+id/with_drawal_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginBottom="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_44"
        android:background="@drawable/set_bg_btn14"
        android:text="退款"
        android:textColor="#ffffff"
        android:textSize="16sp" />


</LinearLayout>