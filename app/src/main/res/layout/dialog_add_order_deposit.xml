<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/set_bg_btn21"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_20">


    <ImageView
        android:id="@+id/delete"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:src="@mipmap/delete"
        android:layout_alignParentRight="true"
        android:scaleType="center"
        />
    <LinearLayout
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/delete">

        <pro.haichuang.tzs144.view.LSettingItem
            android:id="@+id/guarantee_persion_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            app:LtextColor="#000000"
            app:leftText="押金编号"
            app:leftTextMarginLeft="@dimen/dp_10"
            app:rightStyle="iconHide"
            app:isShowRightText = "false"
            app:rightText="请输入"
            app:showEditInput="true"
            app:rightIconSize="@dimen/dp_22" />


        <pro.haichuang.tzs144.view.LSettingItem
            android:id="@+id/deposit_items"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            app:LtextColor="#000000"
            app:leftText="押金物品"
            app:leftTextMarginLeft="@dimen/dp_10"
            app:rightStyle="iconHide"
            app:isShowRightText = "false"
            app:rightText="请输入"
            app:showEditInput="true"
            app:rightIconSize="@dimen/dp_22" />



        <pro.haichuang.tzs144.view.LSettingItem
            android:id="@+id/mortgage_price"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            app:LtextColor="#000000"
            app:leftText="单价"
            app:leftTextMarginLeft="@dimen/dp_10"
            app:rightStyle="iconHide"
            app:isShowRightText = "false"
            app:rightText="请输入"
            app:showEditInput="true"
            app:rightIconSize="@dimen/dp_22" />

        <pro.haichuang.tzs144.view.LSettingItem
            android:id="@+id/mortgage_num"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            app:LtextColor="#000000"
            app:leftText="数量"
            app:leftTextMarginLeft="@dimen/dp_10"
            app:rightStyle="iconHide"
            app:isShowRightText = "false"
            app:rightText="请输入"
            app:showEditInput="true"
            app:rightIconSize="@dimen/dp_22" />

        <pro.haichuang.tzs144.view.LSettingItem
            android:id="@+id/total_pr"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            app:LtextColor="#000000"
            app:leftText="金额"
            app:leftTextMarginLeft="@dimen/dp_10"
            app:rightStyle="iconHide"
            app:isShowRightText = "false"
            app:rightText="自动计算"
            app:showEditInput="true"
            app:rightIconSize="@dimen/dp_22" />

        <pro.haichuang.tzs144.view.LSettingItem
            android:id="@+id/mortgage_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            app:LtextColor="#000000"
            app:leftText="开押类型"
            app:leftTextMarginLeft="@dimen/dp_10"
            app:rightStyle="iconHide"
            app:isShowRightText = "true"
            app:rightText="请选择"
            app:rightIconSize="@dimen/dp_22" />

    </LinearLayout>

    <Button
        android:id="@+id/finish_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="@dimen/dp_44"
        android:layout_below="@+id/view2"
        android:background="@drawable/set_bg_btn14"
        android:text="完成"
        android:textColor="#ffffff"
        android:textSize="16sp" />


</RelativeLayout>