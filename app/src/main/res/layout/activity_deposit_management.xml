<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_30">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:scaleType="center"
            android:src="@mipmap/back" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_toRightOf="@+id/back"
            android:background="@drawable/set_bg_btn11">

            <EditText
                android:id="@+id/search_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_22"
                android:layout_marginRight="@dimen/dp_18"
                android:background="@null"
                android:drawableLeft="@mipmap/search"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="left|center"
                android:hint="请输入押金本编号"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/add_img"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentRight="true"
            android:scaleType="center"
            android:layout_centerVertical="true"
            android:src="@mipmap/add_order" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_15">


        <Button
            android:id="@+id/open_deposit"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_28"
            android:text="开押管理"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/set_bg_btn14"/>

        <Button
            android:id="@+id/refund_orders"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_28"
            android:text="退押订单列表"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:background="@drawable/set_bg_btn14"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/set_bg_btn16"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="38dp"
            android:text="2019-06-22  --  2020-11-23"
            android:textColor="#6D7278"
            android:textSize="14sp"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_below="@+id/refund_orders"/>

    </RelativeLayout>


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F8F8">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <include layout="@layout/item_empty" />

</LinearLayout>