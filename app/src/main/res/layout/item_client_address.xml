<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@drawable/set_bg_btn13">

    <ImageView
        android:id="@+id/select_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:src="@mipmap/check_box"/>

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="鹿谷大道店"
        android:textColor="#3F3F3F"
        android:textSize="15sp"
        android:layout_toRightOf="@+id/select_state"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_24"/>
    <TextView
        android:id="@+id/default_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="默认"
        android:textColor="#3386F1"
        android:layout_toRightOf="@+id/address"
        android:layout_marginLeft="@dimen/dp_20"
        android:background="@drawable/set_bg_btn47"
        android:textSize="12sp"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_24"/>

    <TextView
        android:id="@+id/address_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="湖南省长沙市岳麓区麓谷大道1928号"
        android:textColor="#999999"
        android:textSize="14sp"
        android:layout_below="@+id/address"
        android:layout_toRightOf="@+id/select_state"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="6dp"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"/>


</RelativeLayout>