<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@drawable/set_bg_btn13"
    android:paddingBottom="@dimen/dp_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_13">

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单编号 : 23453456y"
            android:textColor="#000000"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/shop_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开押"
            android:textColor="#1DC11D"
            android:textSize="12sp"
            android:background="@drawable/set_bg_btn51"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            />
    </RelativeLayout>


    <TextView
        android:id="@+id/sho_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3F3F3F"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:text="商品数量 : 10"
        android:textSize="12sp"
        android:visibility="visible"
        android:layout_marginTop="@dimen/dp_10"/>

    <TextView
        android:id="@+id/shop_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3F3F3F"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:text="商品金额 : 100元"
        android:layout_marginTop="@dimen/dp_10"
        android:visibility="visible"
        android:textSize="12sp"/>

</LinearLayout>