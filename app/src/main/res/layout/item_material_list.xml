<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/view2"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_18"
        android:text="回收"
        android:textSize="16sp"
        android:background="@drawable/set_bg_btn25"
        android:textColor="#FF9419"
        android:gravity="center"
        android:layout_marginTop="11dp"
        />
    <TextView
        android:id="@+id/material_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="直饮桶"
        android:textSize="16sp"
        android:textColor="#3F3F3F"
        android:layout_toRightOf="@+id/view2"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="10dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/dp_15"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reduce_tong"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_20"
            android:background="@drawable/set_bg_btn26"
            android:gravity="center"
            android:text="-"
            android:textColor="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/shop_num_tong"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_20"
            android:background="@drawable/set_bg_btn26"
            android:gravity="center"
            android:text="0"
            android:textColor="#32C5FF"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/shop_add_tong"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_20"
            android:background="@drawable/set_bg_btn26"
            android:gravity="center"
            android:text="+"
            android:textColor="#000000"
            android:textSize="16sp" />

    </LinearLayout>
</RelativeLayout>