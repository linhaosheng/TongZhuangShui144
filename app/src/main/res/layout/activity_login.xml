<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

   
    <ImageView
        android:layout_width="104dp"
        android:layout_height="104dp"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="@dimen/dp_80"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_70"
        android:layout_marginLeft="@dimen/dp_20"
        android:background="@drawable/set_bg_11"
        android:paddingBottom="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_20">

        <TextView
            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="#080808"
            android:textSize="@dimen/sp_16"
            android:text="用户名"/>

        <EditText
            android:id="@+id/account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_30"
            android:hint="请输入"
            android:background="@null"
            android:textSize="@dimen/sp_16"
            android:layout_marginLeft="@dimen/dp_16"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/set_bg_11"
        android:paddingBottom="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="#080808"
            android:textSize="@dimen/sp_16"
            android:text="密码"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_30"
            android:hint="请输入密码"
            android:background="@null"
            android:textSize="@dimen/sp_16"
            android:password="true"
            android:layout_marginLeft="@dimen/dp_16"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_marginTop="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定库存主体"
            android:textColor="#3F3F3F"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/inventory_subject"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/set_bg_btn11" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/down3"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_20"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/remm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/check_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/check_box"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="记住账号和密码"
                android:textColor="#000000"
                android:layout_marginLeft="@dimen/dp_5"
                android:textSize="12sp"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@drawable/set_bg_btn1"
        android:layout_marginTop="73dp"
        android:layout_marginLeft="@dimen/dp_48"
        android:text="登录"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/white"
        android:layout_marginRight="@dimen/dp_48"/>

    <Button
        android:id="@+id/test_push"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:text="测试推送"/>
</LinearLayout>