<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:background="@drawable/set_bg_btn13">

    <TextView
        android:id="@+id/client_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YY超市   13728329238"
        android:textColor="#000000"
        android:textSize="12sp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"/>

    <TextView
        android:id="@+id/dealer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="经销商"
        android:background="@drawable/set_bg_btn20"
        android:padding="@dimen/dp_2"
        android:textColor="#1677FF"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_toRightOf="@+id/client_info"
        android:textSize="11sp"/>

    <TextView
        android:id="@+id/order_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_10"
        android:text="维护"
        android:textColor="#32C5FF"
        android:textSize="12sp"
        android:layout_marginRight="@dimen/dp_10"/>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F2F2F2"
        android:layout_below="@+id/client_info"
        android:layout_marginTop="@dimen/dp_8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/line"
        android:layout_marginTop="@dimen/dp_14"
        android:paddingBottom="@dimen/dp_14">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单量：50"
                android:textColor="#333333"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/last_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="比上月"
                android:textColor="#3F3F3F"
                android:textSize="12sp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_below="@+id/order_num"
                android:layout_marginTop="@dimen/dp_10"
                />

            <TextView
                android:id="@+id/last_month_num"
                android:layout_width="@dimen/dp_60"
                android:layout_height="wrap_content"
                android:layout_below="@+id/last_month"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="#E02020"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/sp_16"
                android:text="39%"/>


            <TextView
                android:id="@+id/last_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="比上年度同期"
                android:textColor="#3F3F3F"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/last_month"
                android:layout_below="@+id/order_num"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_37"
                />

            <TextView
                android:id="@+id/last_year_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/last_month"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_toRightOf="@+id/last_month_num"
                android:textColor="#3C9C25"
                android:textSize="@dimen/sp_16"
                android:text="50%"/>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/sale_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="销量：500件"
                android:textColor="#333333"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/sale_last_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="比上月"
                android:textColor="#3F3F3F"
                android:textSize="12sp"
                android:layout_below="@+id/sale_num"
                android:layout_marginTop="@dimen/dp_10"
                />

            <TextView
                android:id="@+id/sale_last_month_num"
                android:layout_width="@dimen/dp_60"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sale_last_month"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="#E02020"
                android:textSize="@dimen/sp_16"
                android:text="39%"/>


            <TextView
                android:id="@+id/sale_last_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="比上年度同期"
                android:textColor="#3F3F3F"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/sale_last_month"
                android:layout_below="@+id/sale_num"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_37"
                />

            <TextView
                android:id="@+id/sale_last_year_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sale_last_month"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_toRightOf="@+id/sale_last_month_num"
                android:textColor="#3C9C25"
                android:textSize="@dimen/sp_16"
                android:text="50%"/>

        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>