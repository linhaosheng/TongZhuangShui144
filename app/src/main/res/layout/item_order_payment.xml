<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@drawable/set_bg_btn13"
    android:paddingBottom="@dimen/dp_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10">

        <TextView
            android:id="@+id/order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单编号 : 23453456y"
            android:textColor="#000000"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/order_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话订单"
            android:textColor="#1DC11D"
            android:textSize="12sp"
            android:background="@drawable/set_bg_btn51"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_8"
        android:background="#F2F2F2"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp">

        <TextView
            android:id="@+id/void_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:text="作废"
            android:textColor="#32C5FF"
            android:textSize="12sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_10">

            <TextView
                android:id="@+id/order_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="张三  12345643"/>

            <TextView
                android:id="@+id/client_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="经销商"
                android:textSize="12sp"
                android:textColor="#1677FF"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:background="@drawable/set_bg_btn32"
                android:layout_marginLeft="@dimen/dp_15"/>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/order_inconme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3F3F3F"
        android:textSize="12sp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:text="应收收入  1000元   实际收入   600元"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10">

        <ImageView
            android:id="@+id/check_img"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentRight="true"
            android:scaleType="center"
            android:src="@mipmap/check" />

        <TextView
            android:id="@+id/payment_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收款方式"
            android:textStyle="bold"
            android:textColor="#3F3F3F"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/payment_method">

            <TextView
                android:id="@+id/cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="现金 (元) : 100000"
                android:textColor="#3F3F3F"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/water_tickets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="现金 (元) : 100000"
                android:textColor="#3F3F3F"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/reward_tickets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="现金 (元) : 100000"
                android:textColor="#3F3F3F"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/monthly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="现金 (元) : 100000"
                android:textColor="#3F3F3F"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="12sp"/>
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/deleve_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3F3F3F"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:text="配送日期：2020/12/12 12:00-17:00"
        android:textSize="12sp"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_10"/>

    <TextView
        android:id="@+id/settle_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3F3F3F"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:text="结账日期：2020/12/12 12:00:00"
        android:layout_marginTop="@dimen/dp_6"
        android:visibility="gone"
        android:textSize="12sp"/>

</LinearLayout>