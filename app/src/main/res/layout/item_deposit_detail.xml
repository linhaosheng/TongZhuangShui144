<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="16sp"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:text="详细记录"/>

    <TextView
        android:id="@+id/deposit_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="押金编号：31231314"
        android:textSize="12sp"
        android:textColor="#3F3F3F"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"/>


    <TextView
        android:id="@+id/client_super"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="客户名称：佳佳超市"
        android:textSize="12sp"
        android:textColor="#3F3F3F"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"/>

    <TextView
        android:id="@+id/deposit_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="数量：31"
        android:textSize="12sp"
        android:textColor="#3F3F3F"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"/>

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="金额：130"
        android:textSize="12sp"
        android:textColor="#3F3F3F"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"/>

    <TextView
        android:id="@+id/deposit_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开押类型：押金"
        android:textSize="12sp"
        android:textColor="#3F3F3F"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"/>

    <TextView
        android:id="@+id/deposit_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开押时间：2020-11-10"
        android:textSize="12sp"
        android:textColor="#3F3F3F"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"/>

    <TextView
        android:id="@+id/deposit_persion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开押人：130"
        android:textSize="12sp"
        android:textColor="#3F3F3F"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"/>

    <TextView
        android:id="@+id/deposit_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="退押时间：2020-12-10"
        android:textSize="12sp"
        android:textColor="#3F3F3F"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#E6E6E6"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="15dp"/>


</LinearLayout>