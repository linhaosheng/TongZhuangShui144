<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F8F8">

    <include layout="@layout/header"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/name_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:background="#FFFFFF">


            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张三"
                android:textColor="#3F3F3F"
                android:textSize="@dimen/sp_16"
                android:layout_marginTop="@dimen/dp_10"
                />

            <TextView
                android:id="@+id/order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18909293021"
                android:textSize="14sp"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_80"
                android:layout_toRightOf="@+id/name"
                android:textColor="#999999"/>

                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="经销商"
                    android:textColor="#1677FF"
                    android:textSize="14sp"
                    android:layout_toRightOf="@+id/order_num"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_20"/>

                <ImageView
                    android:id="@+id/order_state_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/pend_order"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:id="@+id/address"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:text="麓谷大道店"
                    android:textColor="#3F3F3F"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_below="@+id/name"/>

                <TextView
                    android:id="@+id/address_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="湖南省长沙市岳麓区麓谷大道1928号"
                    android:textColor="#3F3F3F"
                    android:textSize="14sp"
                    android:layout_toRightOf="@+id/address"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_below="@+id/name"/>

                <TextView
                    android:id="@+id/time"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:text="预计送达时间"
                    android:textColor="#3F3F3F"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_below="@+id/address"
                    android:layout_marginBottom="15dp"/>

                <TextView
                    android:id="@+id/time_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今天 15:00-17:00 送达"
                    android:textColor="#3F3F3F"
                    android:textSize="14sp"
                    android:layout_toRightOf="@+id/time"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_below="@+id/address_detail"/>

                <TextView
                    android:id="@+id/time_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFAE00"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/address_detail"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="12sp"
                    android:text="即将超时"/>

          </RelativeLayout>

            <RelativeLayout
                android:id="@+id/product_info_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/set_bg_btn13">

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="农夫山泉桶装水 1.8L"
                    android:textColor="#3F3F3F"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="18dp"/>

                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥300"
                    android:textSize="18sp"
                    android:textColor="#3F3F3F"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_10"/>

                <TextView
                    android:id="@+id/product_name_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="农夫山泉1.8L"
                    android:textColor="#3F3F3F"
                    android:textSize="12sp"
                    android:layout_marginLeft="12dp"
                    android:layout_below="@+id/product_name"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:id="@+id/price_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥30x10"
                    android:textSize="12sp"
                    android:textColor="#3F3F3F"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_below="@+id/product_price"
                    android:layout_marginRight="@dimen/dp_10"/>

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E6E6E6"
                    android:layout_below="@+id/product_name_detail"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_10"/>


                <TextView
                    android:id="@+id/ticket_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="水票x10"
                    android:textColor="#E02020"
                    android:textSize="12sp"
                    android:layout_marginLeft="12dp"
                    android:layout_below="@+id/line"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/mortgage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="抵扣 -5"
                    android:textSize="12sp"
                    android:textColor="#E02020"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_below="@+id/line"
                    android:layout_marginRight="@dimen/dp_10"/>

                <TextView
                    android:id="@+id/reward_ticket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="奖券"
                    android:textColor="#3F3F3F"
                    android:textSize="12sp"
                    android:layout_marginLeft="12dp"
                    android:layout_below="@+id/ticket_num"
                    android:layout_marginTop="20dp"/>

                <ImageView
                    android:id="@+id/ticket_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/tab"
                    android:layout_below="@+id/ticket_num"
                    android:layout_toRightOf="@+id/reward_ticket"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_20"
                    />

                <TextView
                    android:id="@+id/mortgage2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="抵扣 -1"
                    android:textSize="12sp"
                    android:textColor="#3F3F3F"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_below="@+id/ticket_num"
                    android:layout_marginRight="@dimen/dp_10"/>


                <TextView
                    android:id="@+id/month_ticket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="奖券"
                    android:textColor="#3F3F3F"
                    android:textSize="12sp"
                    android:layout_marginLeft="12dp"
                    android:layout_below="@+id/reward_ticket"
                    android:layout_marginTop="40dp"/>

                <ImageView
                    android:id="@+id/month_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/tab"
                    android:layout_below="@+id/ticket_img"
                    android:layout_toRightOf="@+id/reward_ticket"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_15"
                    />

                <TextView
                    android:id="@+id/mortgage3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="抵扣 -1"
                    android:textSize="12sp"
                    android:textColor="#3F3F3F"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_40"
                    android:layout_below="@+id/mortgage2"
                    android:layout_marginRight="@dimen/dp_10"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/set_bg_btn13">

                <TextView
                    android:id="@+id/product_name_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="农夫山泉桶装水 1.8L"
                    android:textColor="#3F3F3F"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="18dp"/>

                <TextView
                    android:id="@+id/product_price_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥300"
                    android:textSize="18sp"
                    android:textColor="#3F3F3F"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_10"/>

                <TextView
                    android:id="@+id/product_name_detail_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="农夫山泉1.8L"
                    android:textColor="#3F3F3F"
                    android:textSize="12sp"
                    android:layout_marginLeft="12dp"
                    android:layout_below="@+id/product_name_confirm"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="@dimen/dp_15"/>

                <TextView
                    android:id="@+id/price_num_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥30x10"
                    android:textSize="12sp"
                    android:textColor="#3F3F3F"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_below="@+id/product_price_confirm"
                    android:layout_marginRight="@dimen/dp_10"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/price_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品金额"
                    android:textSize="@dimen/dp_12"
                    android:textColor="#3F3F3F"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_20"/>

                <TextView
                    android:id="@+id/tatal_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥123.00"
                    android:textSize="@dimen/dp_12"
                    android:textColor="#3F3F3F"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_20"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="应收金额"
                    android:textSize="@dimen/dp_12"
                    android:textColor="#3F3F3F"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_below="@+id/tatal_price"/>

                <TextView
                    android:id="@+id/need_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥123.00"
                    android:textSize="@dimen/dp_12"
                    android:textColor="#3F3F3F"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_below="@+id/tatal_price"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实收金额"
                    android:textSize="@dimen/dp_12"
                    android:textColor="#3F3F3F"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_below="@+id/need_price" />

                <TextView
                    android:id="@+id/actual_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥123.00"
                    android:textSize="@dimen/dp_18"
                    android:textColor="#E02020"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_below="@+id/need_price"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F8F8F8"
                    android:layout_below="@+id/actual_price"
                    android:layout_marginTop="@dimen/dp_15">

                </View>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/order_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/order_num_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单编号：lr20201124001"
                    android:textSize="@dimen/dp_12"
                    android:textColor="#3F3F3F"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_20"/>

                <TextView
                    android:id="@+id/order_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单来源：微商城"
                    android:textSize="@dimen/dp_12"
                    android:textColor="#3F3F3F"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_20"/>

                <TextView
                    android:id="@+id/pay_way"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付方式：微信支付/水票支付/优惠券"
                    android:textSize="@dimen/dp_12"
                    android:textColor="#3F3F3F"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_20"/>

                <TextView
                    android:id="@+id/finish_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="完成时间：2020-11-23  12:00:00"
                    android:textSize="@dimen/dp_12"
                    android:textColor="#3F3F3F"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:visibility="gone"/>

            </LinearLayout>

            <Button
                android:id="@+id/take_orders"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:text="接单"
                android:textColor="#FFFFFF"
                android:background="@drawable/set_bg_btn14"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_50"
                android:textSize="16sp"
                />

            <Button
                android:id="@+id/transfer_order"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:text="转订单"
                android:textColor="#32C5FF"
                android:layout_marginLeft="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_20"
                android:textSize="16sp"
                android:background="@drawable/set_bg_btn11"
                android:layout_marginBottom="@dimen/dp_50"
                />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>