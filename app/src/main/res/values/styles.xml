    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/grep_twelve</item>
        <item name="colorControlActivated">@color/grep_twelve</item>
    </style>


    <style name="my_tab_text_style">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="emergy_contact_text">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@color/grep_seven</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

