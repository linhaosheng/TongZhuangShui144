        <item name="android:textColor">@color/cancel_air_color</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">@dimen/dp_40</item>
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
        <item name="android:background">@null</item>
    </style>

    <style name="emergy_contact_linr">
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">@dimen/dp_40</item>
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:background">@color/line_four</item>
    </style>

    <style name="setting_text_style_num">
        <item name="android:textColor">@color/black_three</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:text">0</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="setting_text_style">
        <item name="android:textColor">@color/grep_seventh</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_5</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <declare-styleable name="LSettingView">
        <attr name="leftTextInfo" format="string" />
        <attr name="leftText" format="string" />
        <attr name="leftIcon" format="integer" />
        <attr name="rightIcon" format="integer" />
        <attr name="LtextSize" format="dimension" />
        <attr name="LtextInfoSize" format="dimension" />
        <attr name="LtextInfoColor" format="color" />
        <attr name="LtextColor" format="color" />
        <attr name="isShowUnderLine" format="boolean" />
        <attr name="leftIconSize" format="dimension" />
        <attr name="leftTextMarginLeft" format="dimension" />
        <attr name="leftTextInfoMarginLeft" format="dimension" />
        <attr name="rightStyle" format="enum">
            <enum name="iconShow" value="0" />
            <enum name="iconHide" value="1" />
            <enum name="iconCheck" value="2" />
            <enum name="iconSwitch" value="3" />
        </attr>
        <attr name="isShowLeftInfoText" format="boolean" />
        <attr name="isShowRightText" format="boolean" />
        <attr name="isShowRightLogo" format="boolean" />
        <attr name="rightText" format="string" />
        <attr name="rightTextSize" format="dimension" />
        <attr name="rightTextColor" format="color" />
        <attr name="rightIconSize" format="dimension" />
    </declare-styleable>


    <style name="UIActionSheetStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/UIActionSheetAnimation</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="UIActionSheetAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/ui_action_sheet_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/ui_action_sheet_exit_anim</item>
    </style>

    <style name="TurnTableDilogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>


